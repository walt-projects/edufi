<p id="notice"><%= notice %></p>

<h1>Enrollments</h1>

<table>
  <thead>
    <tr>
      <th>School</th>
      <th>Student</th>
      <th>Cohort</th>
      <th>Start date</th>
      <th>End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @enrollments.each do |enrollment| %>
      <tr>
        <td><%= enrollment.school.name %></td>
        <td><%= enrollment.student.full_name %></td>
        <td><%= enrollment.cohort.name %></td>
        <td><%= enrollment.start_date %></td>
        <td><%= enrollment.end_date %></td>
        <td><%= link_to 'Show', school_enrollment_path(id: enrollment.id) %></td>
        <td><%= link_to 'Edit', edit_school_enrollment_path(id: enrollment) %></td>
        <td><%= link_to 'Destroy', school_enrollment_path(id: enrollment.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

